<div class="row">
	{{#each authors}}
		<div class="col-md-3">
			<div class="card">
				<div class="card-body" style="background-color: #e3f2fd;">
					<h4 class="card-title d-flex justify-content-between align-items-center">
						{{ name }}
						<a href="/authors/authors/edit/{{_id}}"><i class="fa-regular fa-pen-to-square"></i></a>
					</h4>
				</div>
				<div class="card-footer" style="background-color: #f0ffff;">
					Created at: {{ createdAt }}<hr>
					<form action="/authors/authors/delete/{{_id}}?_method=DELETE" method="POST">
						<input type="hidden" name="_method" value="DLETE">
						<div class="form-group d-grid gap-2">
							<button type="submit" class="btn btn-danger btn-block">
								Delete
							</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	{{/each}}
</div>